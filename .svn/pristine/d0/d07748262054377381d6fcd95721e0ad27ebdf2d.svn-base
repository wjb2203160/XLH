/* @group Base */
/* 设置网格样式  */
table{
	 border-spacing: 10px;
	 border-collapse: separate; 
	 white-space:nowrap;
	 border:0
}
/* 设置等待框样式 */
.loading {
    width: 160px;
    height: 56px;
    position: absolute;
    top: 50%;
    left: 50%;
    line-height: 56px;
    color: #fff;
    padding-left: 60px;
    font-size: 15px;
    background: #000 url(../img/20160802110801823.gif) no-repeat 10px 50%;
    opacity: 0.7; 
    z-index: 9999;
    -moz-border-radius: 20px;
    -webkit-border-radius: 20px;
    border-radius: 20px;
    filter: progid:DXImageTransform.Microsoft.Alpha(opacity=70);
}

 /* end */